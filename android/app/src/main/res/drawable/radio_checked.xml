<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorOnPrimary"/>
            <stroke
                android:width="1dp"
                android:color="?attr/colorPrimary"/>
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <!-- Middle circle (inner fill with border) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorOnPrimary"/>
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimary"/>
        </shape>
    </item>

    <!-- Inner solid center -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorOnPrimary"/>
        </shape>
    </item>

</layer-list>
